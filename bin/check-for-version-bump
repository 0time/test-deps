#!/usr/bin/env bash

THIS_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

main() {
  local REPO_SLUG=
  local V_SEL=${VERSION_SELECTOR-.version}

  if [ ${USE_TRAVIS_VARS-0} -eq 0 ]; then
    REPO_SLUG="${TRAVIS_REPO_SLUG}"
  else
    REPO_SLUG="${REPO_SLUG-${REMOTE_NAME-origin}/${BRANCH_NAME-master}}"
  fi

  diff \
    <(git show ${REPO_SLUG}:${PACKAGE_JSON-package.json} | jq -r "${V_SEL}") \
    <(cat package.json | jq -r "${V_SEL}") \
    && echo 'Version unchanged, :(.' \
    && exit 1 \
    || echo 'Version changed!  Great Success!'
}

main "$@"
